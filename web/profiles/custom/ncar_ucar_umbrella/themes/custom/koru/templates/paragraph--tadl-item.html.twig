<li class="columns small-12 medium-12 large-4">
  <a href="{{ content.field_tadl_item_link[0]['#url'] }}" class="post-image">
    <img src="{{ tadl_item_image_style_uri }}" alt="{{ content.field_tadl_item_image['#items'].alt }}">
  </a>
  <div class="details">
    <h4><a href="{{ content.field_tadl_item_link[0]['#url'] }}">{{ content.field_tadl_item_title[0] }}</a></h4>
    <div class="excerpt">
      <p>{{ content.field_tadl_item_description[0] }}</p>
    </div>
    {% if content.field_tadl_item_link[0] %}
      <span class="cta-wrapper small dark-blue-on-gray">
      {{ content.field_tadl_item_link }}
    </span>
    {% endif %}
  </div>
</li>
